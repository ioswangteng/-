<!--pages/testView/list/list.wxml-->
<view class='page'>

  <view class='page__hd'>
    <view class='page__title'>List</view>
    <view class='page__desc'>列表</view>
  </view>

  <view class='page__bd'>
    <view class='weui-cells__title'>带说明的列表项</view>

    <view class='weui-cells weui-cells_after-title'>
      <view class='weui-cell'>
        <view class='weui-cell__bd'>标题文字</view>
        <view class='weui-cell__ft'>说明文字</view>
      </view>
    </view>

    <view class='weui-cells__title'>带图标、说明的列表</view>
    <view class='weui-cells weui-cells_after-title'>
      <view class='weui-cell'>
        <view class='weui-cell__hd'>
          <image style='height:20px;width:20px;background-color:red'></image>
        </view>
        <view class='weui-cell__bd'>标题文字</view>
        <view class='weui-cell__ft'>说明文字</view>
      </view>
    </view>


    <view class='weui-cells__title'>带跳转的cell</view>
    <view class='weui-cells weui-cells_after-title'>
      <navigator class='weui-cell weui-cell_access' url='' hover-class='weui-cell_active'>
        <view class='weui-cell__bd'>我试试</view>
        <view class='weui-cell__ft weui-cell__ft_in-access'></view>
      </navigator>
    </view>
  </view>


</view>