.avator{
   display: flex; 
  justify-content: center;
  margin-top: 60rpx;
}
.avator image{
  width: 200rpx;
  height: 200rpx;
  border-radius: 100rpx;
}
.name{
  text-align: center;
  color: #9b9b9b;
  font-size: 40rpx;
  margin: 10rpx 0 60rpx;
}
.item{
  display: flex;
  color: #9b9b9b;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #DDD;
  font-size: 36rpx;
}
.item text:first-child{
  flex: 1;
}
.item text:last-child{
  width: 50rpx;
}