/* pages/aNewModule/todoHome/todoHome.wxss */
.header{
   display: flex; 
   align-items: center;
}
.quick{
  display: flex;
  flex: 1;
  align-items: center;
  border: 1rpx solid #DDD;
  padding: 20rpx;
  color: #9b9b9b;
}
 .add{
  width: 40rpx;
  margin-right: 10rpx;
  color: green;
  font-size: 40rpx;
  font-weight: bold;
}
.new-quick{
   flex: 1; 
  font-size: 36rpx;
}
.new{
  width: 120rpx;
  font-size: 30rpx;
  color: blue;
  padding-left: 10rpx;
}
.empty{
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.empty .title {
  font-size: 60rpx;
  margin: 200rpx 50rpx 50rpx;
  color: #9B9B9B;
}

.empty .content {
  color: #DDD;
  text-align: center;
}
.todos {
  border: 1rpx solid #DDD;
  height: 200rpx;
}
.footer {
  display: flex;
  justify-content: space-between;
  margin: 30rpx 0;
  padding: 0 10rpx;
  font-size: 28rpx;
  color: #9B9B9B;
}